<!-- setting tab -->
<image class="setting" style="height:{{navBarHeight}}px; width: {{navBarHeight}}px; margin:{{navBarTop}}px 0 0 30rpx" src="../../imgs/setting-black.png" mode="aspectFit"></image>

<view class="container">

  <view class="campus">
    <!-- title -->
    <text class="title">HC</text>

    <!-- HC times -->
    <swiper class="swiper" indicator-dots="{{indicatorDotsHC}}" circular="true">
      <block wx:for="{{timesHC}}" wx:key="*this">
        <swiper-item>
          <text class="time" style="color: {{colorsHC[index]}}">{{item}}</text>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- separator line -->
  <view class='line'></view>
  
  <view class="campus">
    <!-- title -->
    <text class="title">BMC</text>
    
    <!-- BMC times -->
    <swiper class="swiper" indicator-dots="{{indicatorDotsBMC}}" circular="true">
      <block wx:for="{{timesBMC}}" wx:key="*this">
        <swiper-item>
          <text class="time" style="color: {{colorsBMC[index]}}">{{item}}</text>
        </swiper-item>
      </block>
    </swiper>
  </view>

</view>