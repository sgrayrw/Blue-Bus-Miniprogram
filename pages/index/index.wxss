#setting-menu {
  margin: 0;
  background-color: white;
  width: 100%;
  position: absolute;
  z-index: 1;
}

slider {
  width: 400rpx;
}

.hc {
  margin: 100rpx 0 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.bmc {
  margin: 80rpx 0 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.title {
  margin: 0 0 40rpx 0;
  color: black;
  font-size: 60rpx;
}

.swiper {
  width: 500rpx;
  height: 200rpx;
}

.time {
  font-size: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.line {
  margin: 0rpx 0 0rpx 0;
  width: 600rpx;
  height: 3rpx;
  background-color: #D8D8D8;
}
